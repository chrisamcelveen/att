<h1>Listing modifiers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Description</th>
      <th>Price</th>
      <th>Item</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @modifiers.each do |modifier| %>
      <tr>
        <td><%= modifier.name %></td>
        <td><%= modifier.image %></td>
        <td><%= modifier.description %></td>
        <td><%= modifier.price %></td>
        <td><%= modifier.item %></td>
        <td><%= modifier.order %></td>
        <td><%= link_to 'Show', modifier %></td>
        <td><%= link_to 'Edit', edit_modifier_path(modifier) %></td>
        <td><%= link_to 'Destroy', modifier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Modifier', new_modifier_path %>
