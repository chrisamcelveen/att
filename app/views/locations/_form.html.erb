<%= simple_form_for(@location) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :display_name %>
    <%= f.input :location_name %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :zip %>
    <%= f.input :image %>
    <%= f.input :truck %>
    <%= f.association :menu %>
    <%= f.association :order %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
